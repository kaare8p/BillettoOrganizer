<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login" tools:context=".LoginActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginLogo"
        android:layout_marginTop="45dp"
        android:src="@drawable/logo_text_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint="E-mail Adress"
        android:layout_below="@+id/loginLogo"
        android:layout_alignStart="@+id/loginLogo"
        android:layout_alignEnd="@+id/loginLogo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_below="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:layout_alignStart="@+id/email" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@drawable/custombutton"
        android:id="@+id/loginButton"
        android:onClick="onClickButton"
        android:text="Login"
        android:textColor="#ebfef9fa"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_alignEnd="@+id/password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create User"
        android:id="@+id/createUserButton"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/loginButton"
        android:layout_alignStart="@+id/loginButton"
        android:layout_alignEnd="@+id/loginButton" />
</RelativeLayout>
